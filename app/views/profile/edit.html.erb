<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img"></div>
        </div>
        <div class="col-md-6">
            <div class="profile-head"> 
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" style="text-align: center;">
                        <%= form_with model: @user, url: "/profile/#{@user.nickname}/edit" , method: :patch do |form| %>
                        <div class="form-floating">
                          <img id="output" width="250" height="250" />
                          <br>
                          <%= form.file_field :avatar, class: "form-control", onchange:"loadFile(event)"%>
                        </div>
                        <br>
                        <div class="form-floating">
                            <%= form.text_area :bio, class: "form-control", style: "height: 150px" %>
                            <%= form.label :bio %>
                        </div>
                          <div class="form-floating">
                            <%= form.text_field :facebook, autofocus: true, class: "form-control"%>
                            <%= form.label :facebook %><br />
                          </div>

                          <div class="form-floating">
                            <%= form.text_field :instagram, autofocus: true, class: "form-control"%>
                            <%= form.label :instagram %><br />
                          </div>

                          <div class="form-floating">
                            <%= form.text_field :twitter, autofocus: true, class: "form-control"%>
                            <%= form.label :twitter %><br />
                          </div>
                        <br>
                            <%= form.submit "Atualizar", class: "btn btn-primary", style: "margin-bottom: 26px;"%>
                    <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
  var loadFile = function(event) {
    var output = document.getElementById('output');
    output.src = URL.createObjectURL(event.target.files[0]);
    output.onload = function() {
      URL.revokeObjectURL(output.src) // free memory
    }
  };
</script>